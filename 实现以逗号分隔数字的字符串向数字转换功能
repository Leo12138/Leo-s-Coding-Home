#include <iostream>
#include <sstream>
#include <string>
#include <vector>

using namespace std;
//space函数把所有逗号变成' '空格符
void space(string &s){
    for(auto &c : s){
        if(c == ','){
            c = ' ';
        }
    }
}

//tran函数把字符串s中的数字逐个导入到向量vec中
void tran(string &s, vector<double> &vec){
    space(s);//space函数把所有逗号变成' '空格符
    stringstream ss;
    double num = 0;
    double temp = 0;
    int flag = 1;//flag为1表示为正，为-1表示为负
    for(auto c : s){
        if(c != ' '){
            if(c == '-'){ flag = -1;}
            ss << c;
            ss >> temp;
            ss.clear();
            num = (num*10)+temp; 
        }
        if(c == ' '){
            if(flag == 1){ vec.push_back(num); }
            else  { 
                vec.push_back((-1)*num);
                flag = 1;
            }
            num = 0;
        }
        
    }
    vec.push_back(num);
}
//测试用的主函数
int main(){
    vector<double> vec;
    string s("-11,22,33,44,55");
    tran(s, vec);
    vector<double>::size_type size = vec.size();
    int i = 0;
    while(i < size){
        cout << vec[i] << endl;
        i++;
    }
    system("pause");
}
